<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Guide1Activity"
        android:orientation="vertical">

<!--        상단바-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:background="#FFE4B5">
            <ImageView
                android:layout_marginStart="90dp"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/topimg"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MENUGEN"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="24dp"/>
        </LinearLayout>

        <ImageView
            android:layout_marginTop="60dp"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/app_guide_recommend_img"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="[식단추천] 페이지는요!"
            android:textSize="30dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/black"
            android:gravity="center"/>

        <!--    가이드 설명(식단추천)-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="이용자님의 보유질환(당뇨), 알러지 \n정보를 반영하여 드실 수 있는 \n추천 식단을 보여드려요 :)"
            android:textSize="18dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/black"
            android:gravity="center"/>

        <Button
            android:id="@+id/btnGotoGuide2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="다음"
            android:textSize="24dp"
            android:layout_marginHorizontal="100dp"
            android:backgroundTint="#FF7F00"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>
</layout>